<body style="background-image: url(/images/ProductBackground/bose.jpg) ; background-size: cover"></body>
   {{# if products }}	
   <div class="container" style="opacity: 0.85">
      <div class="card">
         <div class="container-fliud">
            <div class="wrapper row">
               <div class="preview col-md-6">
                  <div class="preview-pic tab-content zoom">
                     <div class="tab-pane active" id="{{products.id}}"><img class="mx-auto d-block" src="/{{ products.imagepath}}" /></div>
                  </div>
               </div>
               <div class="details col-md-6">
                  <h3 class="product-title">{{products.title}}</h3>
                  <p class="product-description">{{products.description }}</p>
                  <h4 class="price">current price: <span>${{products.price}}</span></h4>
                  <div class="rating">
                     <div class="stars">
                        {{#times products.productRating}}
                        <span class="fa fa-star checked"></span>
                        {{/times}}
                        {{#ntimes products.productRating}}
                        <span class="fa fa-star"></span>
                        {{/ntimes}}
                     </div>
                  </div>
                  <h5 class="sizes">
                     Quantity:
                     <div class="dropdown" style="display: inline-block">
                        <button class="btn btn-secondary dropdown-toggle  quantity-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Select</button>
                        <div class="dropdown-menu quantity" aria-labelledby="dropdownMenuButton">
                           <a class="dropdown-item quantity-item" href="#"><input class="quantity-item" value="1">1</input></a>
                           <a class="dropdown-item quantity-item" href="#"><input class="quantity-item" value="2">2</input></a>
                           <a class="dropdown-item quantity-item" href="#"><input class="quantity-item" value="3">3</input></a>
                        </div>
                     </div>
                  </h5>
                  <div class="action">
                     <a onclick="myFunction('{{products.id}}')" class="btn btn-success addCart">Add to cart</a>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
   {{/if}}
</body>